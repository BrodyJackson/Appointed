<UserControl x:Class="Appointed.Views.Sidebar.ListItems.CreateNewPatientResultItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Appointed.Views.Sidebar.ListItems"
             mc:Ignorable="d"
             Background="#EEEEEE"
             Margin="0, 2, 0, 2"
             d:DesignHeight="80" d:DesignWidth="300">
    <Grid Margin="4">
        <Grid.RowDefinitions>

            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />

        </Grid.RowDefinitions>

        <TextBlock
            Name="Message"
            FontFamily="Yu Gothic UI Light"
            FontSize="24"
            HorizontalAlignment="Center"
            Grid.Row="0"
            Grid.Column="0"
            Text="No Patients Found"
            VerticalAlignment="Center"
            Foreground="#FFFF1E1E" />

        <Button
            Name="Action"
            Grid.Row="1"
            Grid.Column="0"
            Content="Create New Patient"
            Margin="0,2,0,2"
            FontSize="16"/>

    </Grid>
</UserControl>
