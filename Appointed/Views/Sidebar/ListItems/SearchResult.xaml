<UserControl x:Class="Appointed.Views.Sidebar.ListItems.SearchResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Appointed.Views.Sidebar.ListItems"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="300">
    <Grid
        Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Foreground="Black"
            Name="PatientName"
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Text="Patient, Name"
            HorizontalAlignment="Left" />
        <TextBlock
            Foreground="Black"
            Name="PatientID"
            Grid.Column="0"
            Grid.Row="1"
            Text="55555-555"
            Grid.RowSpan="1"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Left" />
        <TextBlock
            Foreground="Black"
            Name="PatientBirthday"
            Grid.Column="1"
            Grid.Row="1"
            Text="Birthdate: MM-DD-YYYY"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Right" />
        <TextBlock
            Foreground="Black"
            Name="PatientSex"
            Grid.Column="2"
            Grid.Row="0"
            Text="Sex: X"
            HorizontalAlignment="Right" />
        <Button
            Margin="0, 2, 2, 0"
            Grid.Column="0"
            Grid.Row="2"
            Content="Next Appt." />
        <Button
            Margin="2,2,2,0"
            Grid.Column="1"
            Grid.Row="2"
            Content="Book Appt." />
        <Button
            Margin="2,2,0,0"
            Grid.Column="2"
            Grid.Row="2"
            Content="More Info" />

    </Grid>
</UserControl>
