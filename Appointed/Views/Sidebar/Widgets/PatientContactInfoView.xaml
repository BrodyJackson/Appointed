<UserControl x:Class="Appointed.Views.Sidebar.Widgets.PatientContactInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Appointed.Views.Sidebar.Widgets"
    mc:Ignorable="d"
    d:DesignHeight="145"
    d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="auto" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="auto" />
            <RowDefinition
                Height="auto" />
            <RowDefinition
                Height="auto" />
            <RowDefinition
                Height="auto" />
        </Grid.RowDefinitions>

        <Border
            BorderThickness="1"
            BorderBrush="LightGray"
            Grid.RowSpan="4"
            Grid.ColumnSpan="3" />

        <Image
            Margin="0,2,2,0"
            Grid.Column="2"
            Grid.Row="0"
            Width="16"
            Height="16"
            Cursor="Hand"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Source="/Appointed;component/Assets/EditIcon.png"
            ToolTip="Edit Contact Information"/>

        <TextBlock
            Margin="4"
            Grid.Column="0"
            Grid.Row="0"
            Text="Contact Information"
            FontSize="20"
            Grid.ColumnSpan="2">
            <TextBlock.Foreground>
                <SolidColorBrush
                    Color="#FFFF1E1E"
                    Opacity="0.75" />
            </TextBlock.Foreground>
        </TextBlock>

        <TextBlock
            Margin="4"
            Grid.Column="0"
            Grid.Row="1"
            Text="Home:"
            FontSize="18"
            Grid.ColumnSpan="1">
            <TextBlock.Foreground>
                <SolidColorBrush
                    Color="#FFFF1E1E"
                    Opacity="0.75" />
            </TextBlock.Foreground>
        </TextBlock>
        <TextBlock
            Name="PatientHomePhone"
            Margin="0,4"
            Grid.Column="1"
            Grid.Row="1"
            Text="(403) 587-5555"
            FontSize="18"
            Grid.ColumnSpan="2">
            <TextBlock.Foreground>
                <SolidColorBrush
                    Color="#FFFF1E1E"
                    Opacity="0.75" />
            </TextBlock.Foreground>
        </TextBlock>
        <TextBlock
            Margin="4"
            Grid.Column="0"
            Grid.Row="2"
            Text="Cell:"
            FontSize="18"
            Grid.ColumnSpan="1">
            <TextBlock.Foreground>
                <SolidColorBrush
                    Color="#FFFF1E1E"
                    Opacity="0.75" />
            </TextBlock.Foreground>
        </TextBlock>
        <TextBlock
            Name="PatientCellPhone"
            Margin="0,4"
            Grid.Column="1"
            Grid.Row="2"
            Text="(587) 403-5555"
            FontSize="18"
            Grid.ColumnSpan="2">
            <TextBlock.Foreground>
                <SolidColorBrush
                    Color="#FFFF1E1E"
                    Opacity="0.75" />
            </TextBlock.Foreground>
        </TextBlock>

        <TextBlock
            Margin="4"
            Grid.Column="0"
            Grid.Row="3"
            Text="Email:"
            FontSize="18"
            Grid.ColumnSpan="1">
            <TextBlock.Foreground>
                <SolidColorBrush
                    Color="#FFFF1E1E"
                    Opacity="0.75" />
            </TextBlock.Foreground>
        </TextBlock>
        <TextBlock
            Name="PatientEmail"
            Margin="0,4,4,0"
            Grid.Column="1"
            Grid.Row="3"
            Text="short@ucalgary.ca"
            FontSize="18"
            Grid.ColumnSpan="2">
            <TextBlock.Foreground>
                <SolidColorBrush
                    Color="#FFFF1E1E"
                    Opacity="0.75" />
            </TextBlock.Foreground>
        </TextBlock>

    </Grid>
</UserControl>
