<Window x:Class="Appointed.Views.Controls.ShowableCalendar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Appointed.Views.Controls"
        mc:Ignorable="d"
        Title="ShowableCalendar" Height="200" Width="200"
        xmlns:ViewModels="clr-namespace:Appointed.ViewModels"

        >

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Calendar
            SelectionMode="SingleDate"
            Cursor="Hand"
            SelectedDatesChanged="DateSelected"
            />


    </Grid>
</Window>
