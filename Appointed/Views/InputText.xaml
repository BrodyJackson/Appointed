<UserControl x:Class="Appointed.Views.InputText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Appointed.Views"
             mc:Ignorable="d" d:DesignWidth="100" Height="20">
    <Grid>
        <TextBox x:Name="TextField" HorizontalAlignment="Stretch"  Margin="0,0,0,0" TextWrapping="NoWrap" GotFocus="TextField_GotFocus" LostFocus="TextField_LostFocus" VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
